# Database (Railway Postgres connection string)
DATABASE_URL=postgresql://user:pass@host:port/cryptooracle

# Redis (Railway Redis connection string)
REDIS_URL=redis://default:pass@host:port

# Exchange API (optional, for higher rate limits)
EXCHANGE_API_KEY=
EXCHANGE_API_SECRET=

# On-chain data
CRYPTOQUANT_API_KEY=

# Sentiment (free, no key needed for Alternative.me)
ALTERNATIVE_ME_API=https://api.alternative.me/fng/

# Social sentiment (optional)
LUNARCRUSH_API_KEY=

# News APIs
NEWSAPI_KEY=
GNEWS_API_KEY=

# Claude API for news classification
ANTHROPIC_API_KEY=

# Notifications (optional)
ALERT_EMAIL=

# App settings
APP_ENV=development
LOG_LEVEL=INFO

# Authentication
JWT_SECRET_KEY=          # Generate: openssl rand -hex 32
JWT_EXPIRY_HOURS=24
ADMIN_USERNAME=admin
ADMIN_PASSWORD=          # Set on first deploy
FRONTEND_URL=http://localhost:5173
